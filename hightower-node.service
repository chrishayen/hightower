[Unit]
Description=Hightower Node Client
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/ht node
Restart=on-failure
RestartSec=5
User=hightower
Group=hightower

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/hightower /var/lib/hightower

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hightower-node

[Install]
WantedBy=multi-user.target
