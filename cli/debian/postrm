#!/bin/sh
set -e

case "$1" in
    purge)
        # Remove log directory on purge
        rm -rf /var/log/hightower

        # Remove user and group
        if getent passwd hightower >/dev/null; then
            deluser hightower >/dev/null 2>&1 || true
        fi
        if getent group hightower >/dev/null; then
            delgroup hightower >/dev/null 2>&1 || true
        fi
        ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Don't remove user/logs on simple remove, only on purge
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
